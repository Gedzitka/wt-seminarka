{% extends 'base.html.twig' %}

{% block title %}Edit Student{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Úprava údajů</h1>

                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.jmeno, 'Jméno') }}
                        {{ form_widget(form.jmeno, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.jmeno) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.prijmeni, 'Příjmení') }}
                        {{ form_widget(form.prijmeni, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prijmeni) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.vek, 'Věk') }}
                        {{ form_widget(form.vek, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.vek) }}
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary mt-2">{{ button_label|default('Upravit') }}</button>
                        <a href="{{ path('app_student_index') }}" class="btn btn-secondary mt-2">Zpět na seznam</a>
                       
                    </div>
                {{ form_end(form) }}
                {{ include('student/_delete_form.html.twig') }}
                
            </div>
        </div>
    </div>
{% endblock %}
