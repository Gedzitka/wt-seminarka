{% extends 'base.html.twig' %}

{% block title %}Seznam studentů{% endblock %}

{% block body %}
    <div class="container mt-5">
         <div class="d-flex justify-content-end mb-3 gap-2">
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Odhlásit se</a>
            <a href="{{ path('app_student_new') }}" class="btn btn-success">Přidat nového studenta</a>
        </div>
        <h1 class="text-center">Seznam studentů</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped mx-auto" style="width: 75%;">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Jméno</th>
                        <th>Příjmení</th>
                        <th>Věk</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                        <tr>
                            <td>{{ student.id }}</td>
                            <td>{{ student.jmeno }}</td>
                            <td>{{ student.prijmeni }}</td>
                            <td>{{ student.vek }}</td>
                            <td>
                                <a href="{{ path('app_student_show', {'id': student.id}) }}" class="btn btn-info">Zobrazit</a>
                                <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="btn btn-warning">Upravit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
